{
  "template": "busreg*",
  "mappings": {
    "busreg": {
      "properties": {
        "busreg_id": {
          "type": "keyword"
        },
        "service_no": {
          "type": "keyword"
        },
        "service_no_analysed": {
          "type": "text",
          "analyzer": "pipe_sep"
        },
        "reg_no": {
          "type": "text"
        },
        "lic_id": {
          "type": "keyword"
        },
        "lic_no": {
          "type": "text"
        },
        "lic_status": {
          "type": "keyword"
        },
        "org_name": {
          "type": "text",
          "analyzer": "companies"
        },
        "org_id": {
          "type": "keyword"
        },
        "org_name_wildcard": {
          "type": "keyword"
        },
        "start_point": {
          "type": "text"
        },
        "finish_point": {
          "type": "text"
        },
        "date_1st_reg": {
          "type": "date",
          "format": "yyyy-MM-dd"
        },
        "bus_reg_status": {
          "type": "keyword"
        },
        "traffic_area": {
          "type": "keyword"
        },
        "ta_code": {
          "type": "keyword"
        },
        "route_no": {
          "type": "keyword"
        },
        "variation_no": {
          "type": "keyword"
        }
      }
    }
  },
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 0,
    "refresh_interval": "30s",
    "analysis": {
      "char_filter": {
        "spaces_removed_pattern": {
          "type": "pattern_replace",
          "pattern": "\\s",
          "replacement": ""
        }
      },
      "analyzer": {
        "companies": {
          "type": "standard",
          "stopwords": [
            "a",
            "an",
            "and",
            "&",
            "are",
            "as",
            "at",
            "be",
            "but",
            "by",
            "for",
            "if",
            "in",
            "into",
            "is",
            "it",
            "no",
            "not",
            "of",
            "on",
            "or",
            "such",
            "that",
            "the",
            "their",
            "then",
            "there",
            "these",
            "they",
            "this",
            "to",
            "was",
            "will",
            "with",
            "limited",
            "ltd",
            "plc",
            "inc",
            "incorporated",
            "llp"
          ]
        },
        "lowercase": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase"]
        },
        "pipe_sep": {
          "type": "custom",
          "tokenizer": "pipe",
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "pipe": {
          "type": "pattern",
          "pattern": "\\|"
        }
      }
    }
  }
}
