{
  "template": "busreg*",
  "mappings": {
    "properties": {
      "busreg_id": {
        "type": "keyword"
      },
      "service_no": {
        "type": "keyword"
      },
      "service_no_analysed": {
        "type": "text",
        "fielddata": true,
        "analyzer": "pipe_sep"
      },
      "reg_no": {
        "type": "text",
        "fielddata": true
      },
      "lic_id": {
        "type": "keyword"
      },
      "lic_no": {
        "type": "text",
        "fielddata": true
      },
      "lic_status": {
        "type": "keyword"
      },
      "org_name": {
        "type": "text",
        "fielddata": true,
        "analyzer": "companies"
      },
      "org_id": {
        "type": "keyword"
      },
      "org_name_wildcard": {
        "type": "keyword"
      },
      "start_point": {
        "type": "text",
        "fielddata": true
      },
      "finish_point": {
        "type": "text",
        "fielddata": true
      },
      "date_1st_reg": {
        "type": "date",
        "format": "yyyy-MM-dd"
      },
      "bus_reg_status": {
        "type": "keyword"
      },
      "traffic_area": {
        "type": "keyword"
      },
      "ta_code": {
        "type": "keyword"
      },
      "route_no": {
        "type": "keyword"
      },
      "variation_no": {
        "type": "keyword"
      }
    }
  },
  "index_patterns": ["busreg-*"],
  "aliases": {
    "busreg": {
      "is_write_index": true
    }
  },
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 0,
    "refresh_interval": "30s",
    "analysis": {
      "char_filter": {
        "spaces_removed_pattern": {
          "type": "pattern_replace",
          "pattern": "\\s",
          "replacement": ""
        }
      },
      "analyzer": {
        "companies": {
          "type": "standard",
          "stopwords": [
            "a",
            "an",
            "and",
            "&",
            "are",
            "as",
            "at",
            "be",
            "but",
            "by",
            "for",
            "if",
            "in",
            "into",
            "is",
            "it",
            "no",
            "not",
            "of",
            "on",
            "or",
            "such",
            "that",
            "the",
            "their",
            "then",
            "there",
            "these",
            "they",
            "this",
            "to",
            "was",
            "will",
            "with",
            "limited",
            "ltd",
            "plc",
            "inc",
            "incorporated",
            "llp"
          ]
        },
        "lowercase": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase"]
        },
        "pipe_sep": {
          "type": "custom",
          "tokenizer": "pipe",
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "pipe": {
          "type": "pattern",
          "pattern": "\\|"
        }
      }
    }
  }
}
