{
  "template": "vehicle_removed*",
  "mappings": {
    "properties": {
      "removal_date": {
        "type": "date",
        "format": "yyyy-MM-dd"
      },
      "disc_no": {
        "type": "keyword"
      },
      "gd_id": {
        "type": "keyword"
      },
      "lic_id": {
        "type": "keyword"
      },
      "lic_no": {
        "type": "text",
        "fielddata": true
      },
      "lic_veh_id": {
        "type": "keyword"
      },
      "org_id": {
        "type": "keyword"
      },
      "org_name": {
        "type": "text",
        "fielddata": true,
        "analyzer": "companies"
      },
      "org_name_wildcard": {
        "type": "keyword"
      },
      "ref_data_id": {
        "type": "keyword"
      },
      "specified_date": {
        "type": "date",
        "format": "yyyy-MM-dd"
      },
      "lic_status": {
        "type": "keyword"
      },
      "lic_status_desc": {
        "type": "keyword"
      },
      "lic_type_desc": {
        "type": "keyword"
      },
      "veh_id": {
        "type": "keyword"
      },
      "vrm": {
        "type": "text",
        "fielddata": true,
        "analyzer": "vehicle_current_edgengram_analyzer"
      },
      "section_26": {
        "type": "keyword"
      },
      "goods_or_psv_desc": {
        "type": "keyword"
      }
    }
  },
  "index_patterns": ["vehicle_removed-*"],
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 0,
    "refresh_interval": "30s",
    "index.lifecycle.name": "Rollover",
    "index.lifecycle.rollover_alias": "vehicle_removed",
    "analysis": {
      "char_filter": {
        "spaces_removed_pattern": {
          "type": "pattern_replace",
          "pattern": "\\s",
          "replacement": ""
        }
      },
      "analyzer": {
        "companies": {
          "type": "standard",
          "stopwords": [
            "a",
            "an",
            "and",
            "&",
            "are",
            "as",
            "at",
            "be",
            "but",
            "by",
            "for",
            "if",
            "in",
            "into",
            "is",
            "it",
            "no",
            "not",
            "of",
            "on",
            "or",
            "such",
            "that",
            "the",
            "their",
            "then",
            "there",
            "these",
            "they",
            "this",
            "to",
            "was",
            "will",
            "with",
            "limited",
            "ltd",
            "plc",
            "inc",
            "incorporated",
            "llp"
          ]
        },
        "vehicle_current_edgengram_analyzer": {
          "tokenizer": "vehicle_current_edgengram_tokenizer",
          "filter": ["lowercase", "stop"],
          "char_filter": ["spaces_removed_pattern"]
        }
      },
      "tokenizer": {
        "vehicle_current_edgengram_tokenizer": {
          "type": "edgeNGram",
          "min_gram": "2",
          "max_gram": "10",
          "token_chars": ["letter", "digit"]
        }
      }
    }
  }
}
