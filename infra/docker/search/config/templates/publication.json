{
  "template": "publication*",
  "mappings": {
    "properties": {
      "pub_link_id": {
        "type": "keyword"
      },
      "pub_id": {
        "type": "keyword"
      },
      "lic_id": {
        "type": "keyword"
      },
      "org_id": {
        "type": "keyword"
      },
      "ta_id": {
        "type": "keyword"
      },
      "pub_sec_id": {
        "type": "keyword"
      },
      "pub_no": {
        "type": "keyword"
      },
      "pub_type": {
        "type": "keyword"
      },
      "pub_date": {
        "type": "date",
        "format": "yyyy-MM-dd"
      },
      "pub_status": {
        "type": "keyword"
      },
      "pub_status_desc": {
        "type": "keyword"
      },
      "lic_no": {
        "type": "text",
        "fielddata": true
      },
      "lic_type_desc": {
        "type": "keyword"
      },
      "org_name": {
        "type": "text",
        "fielddata": true,
        "analyzer": "companies"
      },
      "org_name_wildcard": {
        "type": "keyword"
      },
      "traffic_area": {
        "type": "keyword"
      },
      "pub_sec_desc": {
        "type": "keyword"
      },
      "text1": {
        "type": "text",
        "fielddata": true,
        "analyzer": "companies"
      },
      "text2": {
        "type": "keyword"
      },
      "text3": {
        "type": "keyword"
      },
      "text_all": {
        "type": "text",
        "fielddata": true,
        "analyzer": "companies"
      },
      "goods_or_psv_desc": {
        "type": "keyword"
      }
    }
  },
  "index_patterns": ["publication-*"],
  "aliases": {
    "publication": {
      "is_write_index": true
    }
  },
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 0,
    "refresh_interval": "30s",
    "plugins": {
      "index_state_management": {
        "rollover_alias": "publication"
      }
    },
    "aliases": {
      "publication": {}
    },
    "analysis": {
      "char_filter": {
        "spaces_removed_pattern": {
          "type": "pattern_replace",
          "pattern": "\\s",
          "replacement": ""
        }
      },
      "analyzer": {
        "companies": {
          "type": "standard",
          "stopwords": [
            "a",
            "an",
            "and",
            "&",
            "are",
            "as",
            "at",
            "be",
            "but",
            "by",
            "for",
            "if",
            "in",
            "into",
            "is",
            "it",
            "no",
            "not",
            "of",
            "on",
            "or",
            "such",
            "that",
            "the",
            "their",
            "then",
            "there",
            "these",
            "they",
            "this",
            "to",
            "was",
            "will",
            "with",
            "limited",
            "ltd",
            "plc",
            "inc",
            "incorporated",
            "llp"
          ]
        }
      }
    }
  }
}
