{
  "name": "olcs/olcs-internal",
  "description": "OLCS Internal Web Site",
  "require": {
    "php": "~8.3.0",
    "ext-redis": "*",
    "dvsa/laminas-config-cloud-parameters": "^1.0",
    "laminas/laminas-authentication": "^2.19",
    "laminas/laminas-cache": "^3.13",
    "laminas/laminas-cache-storage-adapter-redis": "^2.10",
    "laminas/laminas-code": "^4.17",
    "laminas/laminas-escaper": "^2.18",
    "laminas/laminas-eventmanager": "^3.15",
    "laminas/laminas-filter": "^2.42",
    "laminas/laminas-form": "3.23",
    "laminas/laminas-http": "^2.23",
    "laminas/laminas-i18n": "^2.32",
    "laminas/laminas-inputfilter": "^2.35",
    "laminas/laminas-mvc": "^3.8",
    "laminas/laminas-mvc-i18n": "^1.9",
    "laminas/laminas-mvc-plugin-flashmessenger": "^1.11",
    "laminas/laminas-mvc-plugin-prg": "^1.8",
    "laminas/laminas-navigation": "^2.22",
    "laminas/laminas-servicemanager": "^3.4",
    "laminas/laminas-session": "^2.26",
    "laminas/laminas-stdlib": "^3.21",
    "laminas/laminas-validator": "^2.64",
    "laminas/laminas-view": "^2.44",
    "lm-commons/lmc-rbac-mvc": "^3.5",
    "firebase/php-jwt": "^7.0",
    "olcs/olcs-auth": "^9.0",
    "olcs/olcs-common": "^9.10.1",
    "olcs/olcs-logging": "^8.0",
    "olcs/olcs-transfer": "^8.6.1",
    "olcs/olcs-utils": "^7.0",
    "saeven/zf3-purifier": "^1.1",
    "doctrine/doctrine-module": "^6.3",
    "psr/container": "^1.1|^2",
    "aws/aws-sdk-php": "^3.369",
    "symfony/filesystem": "^7.4"
  },
  "require-dev": {
    "laminas/laminas-developer-tools": "*",
    "mockery/mockery": "^1.6",
    "phpunit/phpunit": "^12.5",
    "san/san-session-toolbar": "*",
    "rector/rector": "^2.3",
    "squizlabs/php_codesniffer": "^3.7",
    "dvsa/coding-standards": "^2.0",
    "phpstan/phpstan": "^2.0",
    "vimeo/psalm": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "Olcs\\": "module/Olcs/src",
      "Admin\\": "module/Admin/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dvsa\\OlcsTest\\": "./test",
      "OlcsTest\\": "./test/Olcs/src",
      "AdminTest\\": "./test/Admin/src",
      "CommonTest\\": "vendor/olcs/olcs-common/test/Common/src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "vendor/bin/phpunit",
    "phpcs": "vendor/bin/phpcs -d memory_limit=512M",
    "psalm": "vendor/bin/psalm",
    "phpstan": "vendor/bin/phpstan --memory-limit=1G",
    "all": [
      "@test",
      "@phpcs",
      "@psalm",
      "@phpstan"
    ]
  },
  "config": {
    "allow-plugins": {
      "laminas/laminas-dependency-plugin": true
    },
    "platform": {
      "ext-redis": "6.2.6"
    }
  }
}
