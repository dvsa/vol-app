            <div class="field inline">
              <label><input type="radio" name="group" val="">No</label>
            </div>
          </fieldset>
        </form>

        <hr /><hr />

        <div class="actions-container">
          <a href="" class="action--primary">Save</a>
          <a href="" class="action--secondary">Cancel</a>
        </div>
      </div>
    </div>
  </div>

  <div class="sidebar--left">
    <h4 class="title">Filter by:</h4>
    {{> _filters}}
  </div>

  <div class="table-col">
    {{#each table}}
      {{#is @index 0 }}
        {{> _table }}
      {{/is }}
    {{/each}}
  </div>




