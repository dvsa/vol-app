    headers:
      - label: Fee no.
        class: sortable descending
      - label: Description
        class: sortable descending
      - label: Created
        class: sortable
      - label: Latest payment ref.
        class: sortable
      - label: Fee amount
        class: sortable
      - label: Outstanding
        class: sortable
      - label: <input type="checkbox">
        class: non-sortable
    columns:
      - <a href="">23423</a><span class="status orange">Outstanding</span>
      - GV/SI Variation Fee for application 1234
      - £256.00
      - 12 May 2013
      - 23232444
      - 13 May 2013
      - <input type="checkbox">
    rows: 4
    actions:
      - label: Pay
        class: primary
      - label: Edit
        class: secondary
---

  <div class="overlay"></div>
  <div class="modal__wrapper">
    <div class="modal">
      <div class="modal__header">
        <h1 class="modal__title">Fee</h1>
        <a href="" class="modal__close">Close</a>
      </div>
      <div class="modal__content">
        <div class="read-only">
          <ul class="definition-list">
            <li class="definition-list__item">
              <dt>Fee No.</dt>
              <dd>123245</dd>
            </li>
            <li class="definition-list__item">
              <dt>Description</dt>
              <dd>Application fee</dd>
            </li>
            <li class="definition-list__item">
              <dt>Fee amount</dt>
              <dd>£250.00</dd>
            </li>
            <li class="definition-list__item">
              <dt>Outstanding</dt>
              <dd>£200</dd>
