  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $(document).on('click', '.action--primary', function(e) {
      e.preventDefault();
      $('th').eq(1).removeClass('invalid');
      $('.validation-wrapper .date').unwrap();
      $('.date input').each(function(index) {
        if ($(this).val() === '') {
          $('th').eq(1).addClass('invalid');
          $(this).parents('.date').wrap('<div class="validation-wrapper"></div>');
        }
      });
      OLCS.eventEmitter.emit("render");
    });
  });
</script>

