<script type="text/javascript">
  $(document).ready(function() {

    $('.js-removed').hide();

    $(document).on('click', '.js-show-removed', function(e) {
      e.preventDefault();
      if ($(this).text() === 'Show removed vehicles') {
        $(this).text('Hide removed vehicles');
        $('.js-removed').show();
      } else {
        $(this).text('Show removed vehicles');
        $('.js-removed').hide();
      }

    });

    $(document).on('click','.js-replace', function(e) {
      e.preventDefault();
      $('.js-confirm-replace').show();
    });

    $(document).on('click','.js-remove', function(e) {
      e.preventDefault();
      $('.js-confirm-remove').show();
    });

    $(document).on('click', '.right a', function(e) {
      if($(this).hasClass('js-remove') || $(this).hasClass('js-replace')) {
        e.preventDefault();
      }
      var currentVRM = $(this).parents('tr').children('td').first().text().substring(0,8);
      localStorage.setItem('currentVRM', currentVRM);
    });

    $(document).on('click', function(e) {
      $('.js-replace-with-ls').text(localStorage.getItem('currentVRM') || 'LL09 URE');
    });

    $('.inline-search__input').on('keyup', function () {
        var value = this.value;
        $('tbody tr').hide().each(function () {
          if ($(this).find('td:first').text().search(value.toUpperCase()) > -1) $(this).show();
        });
    });

  });
</script>

